{% extends 'base.html.j2' %}

{% block title %}List View{% endblock %}

{% block head %}
{{ super() }} <!-- Inherit base header -->
<!-- Include SocketIO for JavaScript -->
<script src="//cdnjs.cloudflare.com/ajax/libs/socket.io/2.2.0/socket.io.js" integrity="sha256-yr4fRk/GU1ehYJPAs8P4JlTgu0Hdsp4ZKrx8bDEDC3I=" crossorigin="anonymous"></script>
{% endblock %}

{% block content %}
<!-- First set of button and image -->
<div class="row justify-content-md-center">
    <div class="col-md-auto">
        <div class="btn-group btn-group-toggle" data-toggle="buttons">
            <label class="btn btn-secondary">
                <input type="radio" name="options" id="onButton1" onclick="turnOn(this)"> ON
            </label>
            <label class="btn btn-secondary">
                <input type="radio" name="options" id="offButton1" onclick="turnOff(this)"> OFF
            </label>
        </div>
        <svg width="40" height="40">
            <circle id="ledPicture1" cx="20" cy="20" r="15" stroke="black" stroke-width="4" fill="black" />
        </svg>
    </div>
</div>
<!-- Second set of button and image -->
<div class="row justify-content-md-center">
    <div class="col-md-auto">
